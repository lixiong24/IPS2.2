@model SiteConfigViewModel

<form class="form form-horizontal" asp-controller="SiteConfig" asp-action="ShopTemplateConfig" method="post">
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">
			确认订单时站内信/Email通知内容：
		</label>
		<div class="formControls col-xs-8 col-sm-9">
			<textarea asp-for="ShopTemplateConfigEntity.EmailOfOrderConfirm" class="textarea"></textarea>
			<span class="label label-warning radius">说明：支持HTML代码，可用标签详见下面的标签说明。</span>
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">
			收到银行汇款后站内信/Email通知内容：
		</label>
		<div class="formControls col-xs-8 col-sm-9">
			<textarea asp-for="ShopTemplateConfigEntity.EmailOfReceiptMoney" class="textarea"></textarea>
			<span class="label label-warning radius">说明：支持HTML代码，可用标签详见下面的标签说明。</span>
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">退款后站内信/Email通知内容：</label>
		<div class="formControls col-xs-8 col-sm-9">
			<textarea asp-for="ShopTemplateConfigEntity.EmailOfRefund" class="textarea"></textarea>
			<span class="label label-warning radius">说明：支持HTML代码，可用标签详见下面的标签说明。</span>
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">开发票后站内短信/Email通知内容：</label>
		<div class="formControls col-xs-8 col-sm-9">
			<textarea asp-for="ShopTemplateConfigEntity.EmailOfInvoice" class="textarea"></textarea>
			<span class="label label-warning radius">说明：支持HTML代码，可用标签详见下面的标签说明。</span>
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">
			发出货物后站内信/Email通知内容：
		</label>
		<div class="formControls col-xs-8 col-sm-9">
			<textarea asp-for="ShopTemplateConfigEntity.EmailOfDeliver" class="textarea"></textarea>
			<span class="label label-warning radius">说明：支持HTML代码，可用标签详见下面的标签说明。</span>
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">
			发送卡号后站内短信/Email通知内容：
		</label>
		<div class="formControls col-xs-8 col-sm-9">
			<textarea asp-for="ShopTemplateConfigEntity.EmailOfSendCard" class="textarea"></textarea>
			<span class="label label-warning radius">说明：支持HTML代码，可用标签详见下面的标签说明。</span>
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">
			以上通知内容中的可用标签及含义：
		</label>
		<div class="formControls col-xs-8 col-sm-9">
			{$OrderID}：订单ID
			{$OrderNum}：订单编号
			{$ContacterName}：收货人姓名
			{$OrderInfo}：订单信息
			{$MoneyTotal}：订单总金额
			{$MoneyReceipt}：订单已收款
			{$MoneyNeedPay}：需要支付金额
			{$InputTime}：订购时间
			{$UserName}：会员用户名
			{$Address}：收货人地址
			{$ZipCode}：收货人邮编
			{$Mobile}：收货人手机
			{$Phone}：收货人电话
			{$Email}：收货人Email
			{$PaymentType}：付款方式
			{$DeliverType}：送货方式
			{$OrderStatus}：订单状态
			{$PayStatus}：付款情况
			{$DeliverStatus}：物流状态
			{$Charge_Deliver}：运费
			{$PresentMoney}：返还现金
			{$PresentExp}：赠送积分
			{$Charge_Deliver}：运费
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">
			订单打印模板管理：
		</label>
		<div class="formControls col-xs-8 col-sm-9">
			@await Component.InvokeAsync("UEditor", new UEditorViewModel { ClientID = "ctlOrderFormat", Content = ViewBag.OrderFormat })
			<span class="label label-warning radius">说明：可用标签详见下面的标签说明。</span>
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">
			发货单打印模板管理：
		</label>
		<div class="formControls col-xs-8 col-sm-9">
			@await Component.InvokeAsync("UEditor", new UEditorViewModel { ClientID = "ctlConsignmentFormat", Content = ViewBag.ConsignmentFormat })
			<span class="label label-warning radius">说明：可用标签详见下面的标签说明。</span>
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">
			以上打印模板中的可用标签及含义：
		</label>
		<div class="formControls col-xs-8 col-sm-9">
			{$OrderID}：订单ID
			{$OrderNum}：订单编号
			{$ClientName}：客户名称
			{$UserName}：用户名
			{$AgentName}：代 理 商
			{$BeginDate}：购买日期
			{$InputTime}：下单时间
			{$NeedInvoice}：需要发票
			{$Invoiced}：已开发票
			{$Status}：订单状态
			{$PayStatus}：付款情况
			{$DeliverStatus}：物流状态
			{$ContacterName}：收货人姓名
			{$Phone}：联系电话
			{$Address}：收货人地址
			{$ZipCode}：邮政编码
			{$Email} ：收货人邮箱
			{$Mobile}：收货人手机
			{$PaymentType}：付款方式
			{$DeliverType}：送货方式
			{$InvoiceContent}：发票信息
			{$ProductName}：商品名称
			{$Unit}：单位
			{$Amount}：数量
			{$Original}：市场价
			{$Price}：实价
			{$TruePrice}：指定价
			{$MoneyTotal}：订单总金额
			{$TotalMoney}：金额
			{$ServiceTerm}：服务期限
			{$ItemRemark}：商品备注
			{$SubTotal}：合计
			{$TotalMoney}：实际金额
			{$MoneyReceipt}：已付款
			{$ChargeDeliver}：运费
			{$OrderTotalMoney}：实际金额
			{$TotalPresentMoney}：返还现金券
			{$TotalPresentExp}：赠送点券
			{$TotalPresentPoint}：实际金额
			{$OrderOption}：订单选项
			{$SumNum}：合计数量
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">
			发送缺货登记补货邮件通知模板管理：
		</label>
		<div class="formControls col-xs-8 col-sm-9">
			<textarea asp-for="ShopTemplateConfigEntity.EmailOfSendOutOfStockLog" class="textarea"></textarea>
			<span class="label label-warning radius">
				说明：{$productName}：商品名称、{$productExplain}：商品详细介绍、{$Url}：商品链接地址。
			</span>
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">
			邮件确认模板管理：
		</label>
		<div class="formControls col-xs-8 col-sm-9">
			<textarea asp-for="ShopTemplateConfigEntity.ConfirmSubscribeEmail" class="textarea"></textarea>
			<span class="label label-warning radius">说明：{$ConfirmSubscribeEmail}：订阅。</span>
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">
			邮件退订模板管理：
		</label>
		<div class="formControls col-xs-8 col-sm-9">
			<textarea asp-for="ShopTemplateConfigEntity.UnsubscribeEmail" class="textarea"></textarea>
			<span class="label label-warning radius">说明：{$UnsubscribeEmail}：退订。</span>
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-2">
			补货单打印模板管理：
		</label>
		<div class="formControls col-xs-8 col-sm-9">
			@await Component.InvokeAsync("UEditor", new UEditorViewModel { ClientID = "ctlFillProductFormat", Content = ViewBag.FillProductFormat })
			<span class="label label-warning radius">
				说明：{$ProductID}：商品ID、{$ProductNum}：商品编号、{$ProductImage}：商品图片、{$ProductName}：商品名称、{$BarCode}：条形码、{$Property}：规格、{$BuyNum}：购买数量、{$Stocks}：库存、{$FillNum}：补货数量、{$Unit}：单位。
			</span>
		</div>
	</div>
	<div class="row cl">
		<div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2">
			<button class="btn btn-primary radius" type="submit"><i class="Hui-iconfont">&#xe632;</i> 保存</button>
			<button class="btn btn-default radius" type="button" onClick="removeIframe();">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
			<span style="color:red; font-size:18px;">@Html.ValidationSummary(true)</span>
		</div>
	</div>
</form>
