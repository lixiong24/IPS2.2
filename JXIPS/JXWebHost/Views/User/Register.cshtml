@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model RegViewModel

@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=yes" name="viewport">
	<title>会员注册</title>
	<!--引入腾讯验证码JS-->
	<script src="https://ssl.captcha.qq.com/TCaptcha.js"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
	<link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css">
	<link rel="stylesheet" href="~/plugins/AdminLTE/css/ionicons.min.css">
	<link rel="stylesheet" href="~/plugins/AdminLTE/css/AdminLTE.min.css">
	<link rel="stylesheet" href="~/plugins/AdminLTE/css/skins/_all-skins.min.css">
	<link rel="stylesheet" href="~/plugins/layer/2.4/skin/layer.css" />
	<!--[if lt IE 9]>
	<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
	<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
	<script src="~/plugins/jQuery/jquery-2.2.3.min.js"></script>
	<script src="~/plugins/jQueryUI/jquery-ui.min.js"></script>
	<script>$.widget.bridge('uibutton', $.ui.button);</script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<script src="~/plugins/AdminLTE/js/app.min.js"></script>
	<script src="~/plugins/layer/2.4/layer.js"></script>
	<script src="~/js/Common.js"></script>
</head>
<body class="hold-transition login-page" style="background: #3283AC url(@Url.Content("~/plugins/AdminLTE/img/admin-login-bg.jpg")) no-repeat center;">
	<div class="login-box">
		<div class="login-logo">
			<a href="javascript:;"><b>会员注册</b></a>
		</div>
		<form asp-controller="User" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
			<div class="login-box-body">
				<span style="color:red;">@Html.ValidationSummary(true)</span>
				<div class="form-group has-feedback">
					<input asp-for="UserName" class="form-control" placeholder="用户名" />
					<span class="glyphicon glyphicon-user form-control-feedback"></span>
				</div>
				<div class="form-group has-feedback">
					<input asp-for="UserPassword" class="form-control" placeholder="密码" />
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
				</div>
				<div class="form-group has-feedback">
					<input asp-for="Mobile" class="form-control" placeholder="手机号" id="txtMobile" />
					<span class="glyphicon glyphicon-earphone form-control-feedback"></span>
				</div>
				<div class="form-group input-group has-feedback">
					<input asp-for="SmsCode" value="" class="form-control" placeholder="验证码" />
					<div class="input-group-btn">
						<button type="button" class="btn" id="TencentCaptcha" data-appid="2098148177" data-cbfn="valCodeSMSSendCodeSMS">获取验证码</button>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-8">
						<div class="checkbox">
							<a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">去登录</a>
						</div>
					</div>
					<div class="col-xs-4">
						<button type="submit" class="btn btn-primary btn-block btn-flat">注  册</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</body>
</html>