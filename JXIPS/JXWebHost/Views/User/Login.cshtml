@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel

@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=yes" name="viewport">
	<title>会员登录</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
	<link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css">
	<link rel="stylesheet" href="~/plugins/AdminLTE/css/ionicons.min.css">
	<link rel="stylesheet" href="~/plugins/AdminLTE/css/AdminLTE.min.css">
	<link rel="stylesheet" href="~/plugins/AdminLTE/css/skins/_all-skins.min.css">
	<!--[if lt IE 9]>
	<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
	<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
	<script src="~/plugins/jQuery/jquery-2.2.3.min.js"></script>
	<script src="~/plugins/jQueryUI/jquery-ui.min.js"></script>
	<script>$.widget.bridge('uibutton', $.ui.button);</script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<script src="~/plugins/AdminLTE/js/app.min.js"></script>
</head>
<body class="hold-transition login-page" style="background: #3283AC url(@Url.Content("~/plugins/AdminLTE/img/admin-login-bg.jpg")) no-repeat center;">
	<div class="login-box">
		<div class="login-logo">
			<a href="javascript:;"><b>会员登录</b></a>
		</div>
		<form asp-controller="User" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
			<div class="login-box-body">
				<span style="color:red;">@Html.ValidationSummary(true)</span>
				<div class="form-group has-feedback">
					<input asp-for="UserName" class="form-control" placeholder="用户名" />
					<span class="glyphicon glyphicon-user form-control-feedback"></span>
				</div>
				<div class="form-group has-feedback">
					<input asp-for="UserPassword" class="form-control" placeholder="密码" />
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
				</div>
				<div class="row">
					<div class="col-xs-8">
						<div class="checkbox">
							<label>
								<input type="checkbox" asp-for="IsPersistent" /> 记住我
							</label>
						</div>
					</div>
					<div class="col-xs-4">
						<button type="submit" class="btn btn-primary btn-block btn-flat">登  录</button>
					</div>
				</div>
				<br />
				<div class="row">
					<div class="col-xs-8">
						<a asp-action="ForgotPassword" asp-route-returnurl="@ViewData["ReturnUrl"]">忘记密码</a>
					</div>
					<div class="col-xs-4">
						<a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="pull-right">免费注册</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</body>
</html>